APG_vrb_dispnotif "chargement de rc-bas.tk"

# Message par defaut pour l'emission
set BAS_rc_msgdefault "message emis par $::APP (ident=$::APG_ident)"

# Application par defaut vers qui sera emis le message :
#   autre instance de l'application ($APP = "BAS")
#   NB : peut etre modifie par option --dest=
set BAS_rc_appdefault $APP

# Delai par defaut entre deux messages.
# NB : peut etre modifie par option --delay=
set BAS_rc_delaydefault 2000

# Mnemonique pour retrouver le payload dans les messages
set BAS_rc_mnemopayload "payload"

# Mnemonique pour retrouver le numero de sequence dans les messages
set BAS_rc_mnemonseq "nseq"
